    <!-- PAS integration parameters -->
    <!--
      BillingCenter as of this release uses Date to store policy period effective date, expiration
      date, and modification date. On the other hand, PAS including PolicyCenter stores these dates as
      DateTime. As the result, when BillingCenter refers to a policy period in PAS as of some date,
      it has to add this effective time to that date to match with that of PAS.
    -->
    <param name="PASEffectiveTime" value="12:01 am"/>

    <!--Parameters that work around optimizer issues in databases-->

    <!--
         BillingCenter works around hash join related query plan problems when executing certain
         Policy searches on Oracle. This parameter controls part of the work around and is true by default.
         The parameter has no effect on databases other than Oracle
    -->
    <param name="DisableHashJoinForPolicySearch" value="true"/>

    <!--
         BillingCenter works around sort merge join query plan problems when executing certain
         Policy searches on Oracle. This parameter controls part of the workaround when DisableHashJoinForPolicySearch
         is set to true and is true by default. The parameter has no effect on databases other than Oracle
    -->
    <param name="DisableSortMergeJoinForPolicySearch" value="true"/>

    <!--
         BillingCenter works around hash join related query plan problems when executing agency cycle exception
         queries for the My Agency Items page on Oracle. This parameter controls part of the work around and is true by default.
         The parameter has no effect on databases other than Oracle
    -->
    <param name="DisableIndexFastFullScanForAgencyCycleException" value="true"/>

    <!--
         BillingCenter works around hash join related query plan problems when executing agency cycle exception
         queries for the My Agency Items page on Oracle. This parameter controls part of the work around and is true by default.
         The parameter has no effect on databases other than Oracle
    -->
    <param name="DisableHashJoinForAgencyCycleException" value="true"/>

    <!--
        BillingCenter works around sort merge join query plan problems when executing agency cycle exception
        queries for the My Agency Items page on Oracle. This parameter controls part of the workaround when
        set to true. The parameter is true by default. The parameter has no effect on databases other than Oracle
    -->
    <param name="DisableSortMergeJoinForAgencyCycleException" value="true"/>


