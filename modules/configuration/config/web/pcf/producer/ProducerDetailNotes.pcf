<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <Page
    canVisit="perm.System.prodtabview and perm.System.prodnoteview"
    id="ProducerDetailNotes"
    parent="ProducerDetailGroup(producer)"
    showUpLink="true"
    title="displaykey.Web.ProducerDetailNotes.Title">
    <LocationEntryPoint
      signature="ProducerDetailNotes(producer : Producer, isClearBundle : Boolean)"/>
    <Variable
      name="producer"
      type="Producer"/>
    <Variable
      name="isClearBundle"
      type="Boolean"/>
    <Screen
      id="ProducerDetailNotesScreen">
      <Toolbar/>
      <SearchPanel
        criteriaName="NoteSearchCriteria"
        resultsName="notes"
        search="return NoteSearchCriteria.performSearch(isClearBundle)"
        searchCriteria="var c = new NoteSearchCriteria(); c.Producer = producer; return c;"
        searchResultsType="NoteQuery">
        <DetailViewPanel
          id="NoteSearchDV">
          <InputColumn>
            <Input
              editable="true"
              id="TextSearch"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.Text"
              value="NoteSearchCriteria.Text"/>
            <RangeInput
              editable="true"
              id="Author"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.Author"
              noneSelectedLabel="displaykey.Web.ProducerDetailNotes.NotesSearch.Any"
              value="NoteSearchCriteria.Author"
              valueRange="producer.NoteAuthors"/>
            <TypeKeyInput
              editable="true"
              id="RelatedToSearch"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.RelatedTo"
              noneSelectedLabel="displaykey.Web.ProducerDetailNotes.NotesSearch.Any"
              value="NoteSearchCriteria.RelatedToEntity"/>
            <TypeKeyInput
              editable="true"
              id="Topic"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.Topic"
              noneSelectedLabel="displaykey.Web.ProducerDetailNotes.NotesSearch.Any"
              value="NoteSearchCriteria.Topic"/>
          </InputColumn>
          <InputColumn>
            <DateCriterionChoiceInput
              editable="true"
              id="DateSearch2"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.DateRange"
              value="NoteSearchCriteria.DateCriterionChoice"/>
            <TypeKeyInput
              editable="true"
              id="LanguageSearch"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.Language"
              value="NoteSearchCriteria.Language"
              visible="LanguageType.getTypeKeys( false ).Count &gt; 1"/>
          </InputColumn>
          <InputColumn>
            <TypeKeyInput
              editable="true"
              id="SortByOption"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.SortBy"
              required="true"
              value="NoteSearchCriteria.SortBy"/>
            <BooleanRadioInput
              editable="true"
              falseLabel="displaykey.Web.ProducerDetailNotes.NotesSearch.SortDescending"
              id="SortAscending"
              label="displaykey.Web.ProducerDetailNotes.NotesSearch.SortOrder"
              trueLabel="displaykey.Web.ProducerDetailNotes.NotesSearch.SortAscending"
              value="NoteSearchCriteria.SortAscending"/>
          </InputColumn>
          <InputFooterSection>
            <InputSetRef
              def="SearchAndResetInputSet()"/>
          </InputFooterSection>
        </DetailViewPanel>
        <PanelRef
          def="NotesLV(notes)">
          <TitleBar
            appendListViewPaging="true"
            title="displaykey.Web.ProducerDetailNotes.Results"/>
          <Toolbar/>
        </PanelRef>
      </SearchPanel>
    </Screen>
  </Page>
</PCF>